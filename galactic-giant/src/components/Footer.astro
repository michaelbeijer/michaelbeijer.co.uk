---
import {
	BEIJERTERM_URL,
	CONTACT_EMAIL,
	CONTACT_PHONE,
	LINKEDIN_URL,
	PROZ_FEEDBACK_URL,
	SUPERVERTALER_URL,
} from '../consts';

const today = new Date();
---

<footer>
	<div class="grid">
		<div class="meta">
			<div class="name">Michael Beijer</div>
			<div class="tagline">Dutch↔English patent &amp; technical translator · Hastings, UK</div>
			<div class="contact">
				<a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
				<span class="sep">·</span>
				<a href={`tel:${CONTACT_PHONE.replace(/\s/g, '')}`}>{CONTACT_PHONE}</a>
			</div>
		</div>
		<div class="links">
			<a href={`/about`}>About</a>
			<a href={LINKEDIN_URL} target="_blank" rel="noopener">LinkedIn</a>
			<a href={PROZ_FEEDBACK_URL} target="_blank" rel="noopener">ProZ feedback</a>
			<a href={SUPERVERTALER_URL} target="_blank" rel="noopener">Supervertaler</a>
			<a href={BEIJERTERM_URL} target="_blank" rel="noopener">Beijerterm</a>
		</div>
	</div>
	<div class="copyright">&copy; {today.getFullYear()} Michael Beijer.</div>
</footer>

<style>
	footer {
		padding: 2.5em 1em;
		border-top: 1px solid rgb(var(--border));
		background: rgb(var(--bg));
		color: rgb(var(--muted));
		text-align: left;
	}
	.grid {
		max-width: 920px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		gap: 1.5em;
		flex-wrap: wrap;
	}
	.name {
		font-weight: 700;
		color: rgb(var(--text));
	}
	.tagline {
		margin-top: 0.25em;
	}
	.contact {
		margin-top: 0.25em;
	}
	.sep {
		margin: 0 0.5em;
	}
	.links {
		display: flex;
		gap: 0.75em 1em;
		flex-wrap: wrap;
	}
	.links a {
		color: rgb(var(--muted));
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 3px;
	}
	.links a:hover {
		color: rgb(var(--text));
	}
	.copyright {
		max-width: 920px;
		margin: 1.5em auto 0 auto;
	}
</style>

---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import {
	BEIJERTERM_URL,
	CONTACT_EMAIL,
	PROZ_FEEDBACK_URL,
	SITE_DESCRIPTION,
	SITE_SEO_TITLE,
	SUPERVERTALER_URL,
} from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_SEO_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Michael Beijer</h1>
			<p class="lead">
				Dutch↔English patent &amp; technical translator and terminologist based in Hastings, United Kingdom.
			</p>
			<p>
				I help teams ship precise technical writing across languages—especially in patents, engineering,
				and software. My workflow is CAT-tool compatible, confidentiality-first, and quality-assured.
			</p>
			<div class="cta">
				<a class="button" href={`/contact`}>Email me</a>
				<a class="button secondary" href={PROZ_FEEDBACK_URL} target="_blank" rel="noopener">ProZ feedback</a>
			</div>
			<p class="subtle-links">
				<a href={`/about`}>About</a>
				<span aria-hidden="true">·</span>
				<a href={`/work`}>Work</a>
			</p>
			<hr />
			<section>
				<h2>What I do</h2>
				<ul class="clean">
					<li><strong>Patents</strong> — translation, editing, terminology alignment, consistency checks.</li>
					<li><strong>Technical translation</strong> — manuals, UI strings, documentation, specifications.</li>
					<li><strong>Terminology</strong> — termbases, cleanup, extraction, and governance.</li>
				</ul>
			</section>
			<section>
				<h2>Side projects</h2>
				<ul class="clean">
					<li>
						<a href={SUPERVERTALER_URL} target="_blank" rel="noopener">Supervertaler</a> — desktop translation companion for CAT workflows.
					</li>
					<li>
						<a href={BEIJERTERM_URL} target="_blank" rel="noopener">Beijerterm</a> — open multilingual terminology database.
					</li>
				</ul>
			</section>
			<section>
				<h2>Get in touch</h2>
				<p>
					Email: <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>.
					If you can, include word count, deadline, domain, and source format.
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.lead {
		font-size: 1.1em;
		color: rgb(var(--muted));
	}
	.cta {
		display: flex;
		gap: 0.75em;
		flex-wrap: wrap;
		margin: 1.25em 0;
	}
	.button {
		display: inline-block;
		padding: 0.6em 0.9em;
		border: 1px solid rgb(var(--text));
		border-radius: 6px;
		text-decoration: none;
		color: rgb(var(--bg));
		background: rgb(var(--text));
		box-shadow: var(--box-shadow);
	}
	.button:hover {
		opacity: 0.9;
	}
	.button.secondary {
		background: rgb(var(--bg));
		color: rgb(var(--text));
	}
	.subtle-links {
		margin: -0.25em 0 1.25em 0;
		color: rgb(var(--muted));
		font-size: 0.95em;
	}
	.subtle-links a {
		color: rgb(var(--muted));
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 3px;
	}
	.subtle-links a:hover {
		color: rgb(var(--text));
	}
	.subtle-links span {
		margin: 0 0.5em;
	}
	.clean {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.clean li {
		margin: 0.5em 0;
	}
</style>
